<div class="mainpostindex">  
  <div class = "container">
    <h1>就職活動に関する新規投稿</h1>

    <div class = "col-md-6 col-md-offset-3" >
      <%= form_with(url: "/mainposts/syunew", model: @mainpost, local: true) do |f| %>

        <%= f.label :質問内容（100字以内）, class: "form-label" %>
        <%= f.text_area :content , size: "20x15", class: "form-control" %>

        <%= f.submit "質問を投稿する" , class: "form-control postsub" %>
      <% end %>
    </div>
  </div>
</div>